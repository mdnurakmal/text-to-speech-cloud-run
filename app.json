{ 
    "build": {
        "skip": true
        },
    "hooks": {
        "prebuild": {
            "commands": [
                "gcloud config set project $GOOGLE_CLOUD_PROJECT",
                "gcloud config set run/region $GOOGLE_CLOUD_REGION ",
                "export TF_VAR_region=$GOOGLE_CLOUD_REGION",
                "gcloud builds submit",
                "terraform init",
                "terraform apply -auto-approve"
            ]
        }
    }
}